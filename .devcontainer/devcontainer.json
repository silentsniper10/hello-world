{
  "name": "Flask PWA API Dev Container",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/sqlite:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt || true",
  "postCreateCommand": "",
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "editor.fontSize": 18,
        "extensions.ignoreRecommendations": true,
        "unwantedRecommendations": ["ms-python.vscode-python-envs"],
        "terminal.integrated.defaultProfile.windows": "Git Bash",
        "window.restoreWindows": "preserve",
        "workbench.colorTheme": "Default Dark+",
        "workbench.iconTheme": "vscode-icons",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "github.copilot.enable": {
          "python": false,
          "html": false,
          "css": false,
          "SQL": false
        },
        "chat.agent.enabled": false
      },
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.pylint",
        "esbenp.prettier-vscode",
        "bierner.markdown-mermaid",
        "GitHub.codespaces",
        "McCarter.start-git-bash",
        "yy0931.vscode-sqlite3-editor",
        "ecmel.vscode-html-css",
        "oderwat.indent-rainbow",
        "yahyabatulu.vscode-markdown-alert",
        "bierner.markdown-preview-github-styles",
        "mechatroner.rainbow-csv",
        "ritwickdey.LiveServer"
      ]
    }
  },
  "forwardPorts": [5000, 3000],
  "portsAttributes": {
    "5000": {
      "label": "API (Flask)",
      "onAutoForward": "openBrowser"
    },
    "3000": {
      "label": "Frontend App",
      "onAutoForward": "openBrowser"
    }
  }
}
